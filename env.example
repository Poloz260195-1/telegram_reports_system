# Получите токен у @BotFather в Telegram
BOT_TOKEN=your_telegram_bot_token_here

# ID чата для отправки отчетов
# Добавьте бота в чат и получите ID через getUpdates API
CHAT_ID=-1002614297220

# ClickHouse Database Configuration
# Настройки подключения к базе данных
CLICKHOUSE_HOST=https://clickhouse.lab.karpov.courses
CLICKHOUSE_DATABASE=simulator_20250620
CLICKHOUSE_USER=student
